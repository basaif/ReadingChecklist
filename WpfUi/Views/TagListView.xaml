<UserControl x:Class="WpfUi.Views.TagListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:WpfUi.Views.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfUi.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Margin="5 10"
                Padding="5 10"
                Command="{Binding ClearSelectedTagsCommand}"
                Content="Clear Selected Tags" />

        <components:VirtualizingItemsControlUc Grid.Row="1" ItemsSource="{Binding SelectableTags}">
            <components:VirtualizingItemsControlUc.ItemTemplate>
                <DataTemplate>
                    <components:SelectableTagUc />
                </DataTemplate>
            </components:VirtualizingItemsControlUc.ItemTemplate>
        </components:VirtualizingItemsControlUc>
    </Grid>
</UserControl>
