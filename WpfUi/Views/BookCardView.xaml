<UserControl x:Class="WpfUi.Views.BookCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:WpfUi.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfUi.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <components:BookCardUc BookName="{Binding BookName}"
                           DateRead="{Binding DateRead}"
                           HighlightText="{Binding HighlightText, Mode=TwoWay}"
                           IsRead="{Binding IsRead, Mode=TwoWay}"
                           IsReadChangedCommand="{Binding ChangeIsReadCommand}"
                           Tags="{Binding Tags}" />
</UserControl>
