<UserControl x:Class="WpfUi.Views.GetBooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:WpfUi.Views.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfUi.Views.Components"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <components:GettingDataFromFolderUc GetDataCommand="{Binding GenterateBookDataCommand}"
                                        IsLoading="{Binding IsGettingBooks}"
                                        Location="{Binding LocationToGetBooks}"
                                        OpenSearchDialogCommand="{Binding OpenSearchForBooksDialogCommand}"
                                        SearchText="Get Books" />
</UserControl>
