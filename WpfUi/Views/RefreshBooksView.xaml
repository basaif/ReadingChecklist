<UserControl x:Class="WpfUi.Views.RefreshBooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUi.Views"
             xmlns:components="clr-namespace:WpfUi.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <components:GettingDataFromFolderUc
        Location="{Binding LocationToGetBooks}"
        OpenSearchDialogCommand="{Binding OpenSearchForBooksDialogCommand}"
        SearchText="Refresh Books"
        GetDataCommand="{Binding RefreshBookDataCommand}"
        IsLoading="{Binding IsRefreshingBooks}"
        />
</UserControl>
