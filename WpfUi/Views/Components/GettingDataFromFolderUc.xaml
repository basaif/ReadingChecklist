<UserControl x:Class="WpfUi.Views.Components.GettingDataFromFolderUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUi.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="parent">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="boolVisibilityConverter"/>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical"
                DataContext="{Binding ElementName=parent}">
        <Grid HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Margin="5" MinHeight="20" VerticalContentAlignment="Center"
                     Padding="2" FontSize="16" IsReadOnly="True" HorizontalAlignment="Stretch"
                     Text="{Binding Location}" Grid.Column="0"
                 />

            <Button Margin="5" Padding="10" Command="{Binding OpenSearchDialogCommand}"
                 Content="Open" Width="60" Grid.Column="1"/>
        </Grid>

        <Button Margin="5" Padding="10"
                 Content="{Binding SearchText}"
                Command="{Binding GetDataCommand}"/>

        <ProgressBar Margin="5" Minimum="0"
                     Maximum="100" 
                             Visibility="{Binding IsLoading, Converter={StaticResource boolVisibilityConverter}}"
                             IsIndeterminate="True"
                     Background="Lavender"
                             Foreground="MediumSlateBlue"
                             Height="15"/>
    </StackPanel>
</UserControl>
