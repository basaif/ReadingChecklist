<UserControl x:Class="WpfUi.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:WpfUi.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfUi.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="boolVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              Background="SlateBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />

            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Margin="5 10"
                       VerticalAlignment="Center"
                       FontSize="22"
                       Foreground="White"
                       Text="Reading Checklist" />
            <TextBlock Grid.Row="0"
                       Grid.Column="2"
                       Margin="5 10"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Text="Search" />
            <TextBox Grid.Row="0"
                     Grid.Column="3"
                     Margin="5 10"
                     VerticalAlignment="Center"
                     Text="{Binding BooksFilter, UpdateSourceTrigger=PropertyChanged}" />
            <CheckBox Grid.Row="0"
                      Grid.Column="4"
                      Margin="5 10"
                      VerticalAlignment="Center"
                      Content="Show Read"
                      Foreground="White"
                      IsChecked="{Binding IsShowReadBooks}" />
        </Grid>
        <Grid Grid.Row="1"
              Grid.RowSpan="2"
              Grid.Column="0"
              Background="Lavender">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Expander Grid.Row="0"
                      Margin="5"
                      Header="Filter By Tags"
                      IsExpanded="True"
                      Visibility="{Binding EnoughBooks, Converter={StaticResource boolVisibilityConverter}}">
                <ContentControl Content="{Binding TagList}" />

            </Expander>

            <Expander Grid.Row="1"
                      Margin="5"
                      Header="Refresh Book List"
                      IsExpanded="False"
                      Visibility="{Binding EnoughBooks, Converter={StaticResource boolVisibilityConverter}}">
                <ContentControl Content="{Binding GetBooksViewModel}" />

            </Expander>



        </Grid>
        <StackPanel Grid.Row="1"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal"
                    Visibility="{Binding EnoughBooks, Converter={StaticResource boolVisibilityConverter}}">
            <TextBlock>
                <Run Text="Books" />
                <Run Text="{Binding NumberOfBooks}" />
                <Run Text="-" />
                <Run Text="Read" />
                <Run Text="{Binding NumberOfReadBooks}" />
                <Run Text="-" />
                <Run Text="Percentage" />
                <Run Text="{Binding PercentageOfReadBooks, StringFormat={}{0}%}" />
            </TextBlock>

        </StackPanel>
        <ScrollViewer Grid.Row="2"
                      Grid.Column="2"
                      CanContentScroll="False"
                      VerticalScrollBarVisibility="Auto">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>


                <ItemsControl Grid.Column="0" ItemsSource="{Binding BooksCollectionView}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:BookCardView />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Margin="10"
                                        VerticalAlignment="Center"
                                        IsItemsHost="True"
                                        Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <ContentControl Content="{Binding GetBooksViewModel}" Visibility="{Binding NotEnoughBooks, Converter={StaticResource boolVisibilityConverter}}" />

            </Grid>
        </ScrollViewer>
        <GridSplitter Grid.Row="1"
                      Grid.RowSpan="2"
                      Grid.Column="1"
                      Width="5"
                      HorizontalAlignment="Center"
                      Background="Lavender" />


    </Grid>
</UserControl>
