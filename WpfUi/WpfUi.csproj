  <ItemGroup>
    <PackageReference Include="FontAwesome" Version="4.7.0" />
    <PackageReference Include="FontAwesome5" Version="2.1.11" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.1" />
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.39" />
    <PackageReference Include="Ookii.Dialogs.Wpf" Version="5.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DomainLogic.Library\DomainLogic.Library.csproj" />
    <ProjectReference Include="..\FileSystemUtilities.Library\FileSystemUtilities.Library.csproj" />
    <ProjectReference Include="..\HighlightTextBlockControl\HighlightTextBlockControl.csproj" />
  </ItemGroup>

  <ItemGroup>
